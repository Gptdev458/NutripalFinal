{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "openai": ["./types/openai.d.ts"],
      "@supabase/supabase-js": ["./types/supabase.d.ts"],
      "https://esm.sh/@supabase/supabase-js@2": ["./types/supabase.d.ts"],
      "openai/resources/chat/completions": ["./types/openai.d.ts"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
} 